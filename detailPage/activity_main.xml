<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical" >

<!--    레이아웃1 : 카테고리, 예약버튼-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvCategory"
            android:text="카테고리"
            android:textSize="20dp"
            android:textColor="#A9A9A9"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/dataName"
            android:text="d"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tvCategory"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnCalendar"
            android:background="@drawable/calendar_button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/dataName" />
    </RelativeLayout>

<!--    레이아웃2 : 이름-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:text="이름"
            android:textSize="20dp"
            android:textColor="#A9A9A9"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dataName"
            android:text="d"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tvName" />
    </RelativeLayout>

<!--    레이아웃3 : 가격-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            android:text="가격"
            android:textSize="20dp"
            android:textColor="#A9A9A9"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dataName"
            android:text="d"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tvPrice" />
    </RelativeLayout>

<!--    레이아웃 4 : 사진(스크롤뷰)-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPicture"
            android:text="사진"
            android:textSize="20dp"
            android:textColor="#A9A9A9"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

<!--        스크롤뷰-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tvPicture" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/img1" />
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/img2" />
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/img3" />
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/img4" />
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/img5" />
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/img6" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

<!--    레이아웃5 : 매장위치(지도)-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvLocation"
            android:text="매장위치"
            android:textSize="20dp"
            android:textColor="#A9A9A9"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dataName"
            android:text="d"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tvLocation" />

<!--        지도-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgLogo"
            android:src="@drawable/logo_image"
            android:layout_marginLeft="285dp" />
    </RelativeLayout>


</LinearLayout>