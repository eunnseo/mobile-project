<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

<!--    레이아웃1 : 아름다운 가게 홈페이지 이동, 홈으로 이동-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnWeb"
            android:text="기증 목록 확인하기 _ 아름다운 가게 홈페이지"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:gravity="center" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgHome"
            android:background="@drawable/home_button"
            android:layout_toRightOf="@+id/btnWeb"
            android:layout_alignBottom="@+id/btnWeb"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

<!--    레이아웃2 : 카테고리 체크박스? 라디오그룹? -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCategory"
            android:text="카테고리"
            android:textSize="20dp"
            android:textColor="#A9A9A9"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rGroup"
            android:layout_toRightOf="@+id/tvCategory"
            android:layout_marginLeft="10dp" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiobtn1"
                android:text="의류"
                android:textSize="20dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiobtn2"
                android:text="영유아 잡화"
                android:textSize="20dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiobtn3"
                android:text="주방·생활 잡화"
                android:textSize="20dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiobtn4"
                android:text="패션·미용 잡화"
                android:textSize="20dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiobtn5"
                android:text="도서·음반"
                android:textSize="20dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiobtn6"
                android:text="가전"
                android:textSize="20dp"/>
        </RadioGroup>
    </RelativeLayout>

<!--    레이아웃3 : 이름 입력-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:text="이름"
            android:textSize="20dp"
            android:textColor="#A9A9A9"
            android:layout_margin="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/edName"
            android:layout_toRightOf="@+id/tvName"
            android:layout_alignBottom="@+id/tvName"/>
    </RelativeLayout>

<!--    레이아웃4 : 사진 업로드-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPicture"
            android:text="사진"
            android:textSize="20dp"
            android:textColor="#A9A9A9"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPicText"
            android:text="위, 아래, 앞, 위, 왼쪽, 오른쪽 총 6면의 사진을 선택하세요"
            android:textSize="10dp"
            android:textColor="#696969"
            android:layout_toRightOf="@+id/tvPicture" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUpload"
            android:text="갤러리에서 가져오기"
            android:textSize="20dp"
            android:layout_below="@+id/tvPicText"
            android:layout_toRightOf="@+id/tvPicture" />

        <!--        <ImageView-->
        <!--            android:layout_width="40dp"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:id="@+id/imgUpload"-->
        <!--            android:layout_below="@+id/tvPicture"-->
        <!--            app:srcCompat="@drawable/upload_button" />-->
    </RelativeLayout>




<!--    레이아웃5 : 확인-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnOk"
            android:text="확인"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgLogo"
            android:src="@drawable/logo_image"
            android:layout_gravity="right"/>
    </LinearLayout>

</LinearLayout>